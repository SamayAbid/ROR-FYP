<h2>New Activity</h2>

<%= form_with model: @trainer_activity do |f| %>
	
	<div class="container p-5">

	<div class="form-group">
		
		<%= f.text_field :name , class:"form-control", placeholder: "Name"%>
		<% @trainer_activity.errors.full_messages_for(:name).each do |message|%>
			<div>
				<%=message%>
			</div>
		<%end%>	
	</div>

	<div class="form-group">
		<br>
		<%= f.text_area :description, class:"form-control",placeholder: "Description"%>
		<% @trainer_activity.errors.full_messages_for(:description).each do |message|%>
			<div>
				<%= message %>
			</div>
		<%end%>	
	</div>
	<br>

  <h2>Select Trainer</h2>

	 <%= activity_form.collection_select :trainer_id ,  @trainers, :id , :name %>	
	<br><br>

	<div>
		<%= f.submit class:"btn btn-dark" %><br><br>
		<%= link_to "back"  , class: "btn btn-dark" %>
	</div>

	</div>
<%end%>  